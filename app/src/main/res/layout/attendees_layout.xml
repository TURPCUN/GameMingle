<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/attendeeDone"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="2dp"
        android:visibility="gone"
        android:src="@drawable/done_24"/>

    <ImageView
        android:id="@+id/attendeeImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon"/>

    <TextView
        android:id="@+id/attendeeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neslihan Turpcu"
        android:layout_marginStart="9dp"
        android:fontFamily="@font/nunito"
        android:textColor="@color/purple_700"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnDeny"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="9dp"
        android:background="@drawable/cancel_24"
        />

    <Button
        android:id="@+id/btnApprove"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="9dp"
        android:background="@drawable/check_24"

        />
</LinearLayout>