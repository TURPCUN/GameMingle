<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reportIdTxt"
                android:layout_width="140dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="Report ID:"
                android:textColor="@color/purple_700"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/reportId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="232e2fd43r232ef34f4"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eventIdTxt"
                android:layout_width="140dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="Event ID:"
                android:textColor="@color/purple_700"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/eventId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="32423423r3232e2f4"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reporterIdTxt"
                android:layout_width="140dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="Reporter ID:"
                android:textColor="@color/accent_green"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/reporterId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="232e2fd43r232effff34f4"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reportReasonTxt"
                android:layout_width="140dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="Reason:"
                android:textColor="@color/purple_700"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/reportReason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="Spam"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chatMessageIdTxt"
                android:layout_width="140dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="Message ID:"
                android:textColor="@color/accent_orange"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/chatMessageId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="232e2fd43r232ef34f4"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chatMessageSenderIdTxt"
                android:layout_width="140dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="Sender ID:"
                android:textColor="@color/accent_red"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/chatMessageSenderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="1233ded4"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chatMessageSenderNameTxt"
                android:layout_width="140dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="Message Sender:"
                android:textColor="@color/accent_red"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/chatMessageSenderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="Bob Smith"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chatMessageDateTxt"
                android:layout_width="140dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="Message Date:"
                android:textColor="@color/accent_orange"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/chatMessageDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="11/11/1111"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chatMessageTimeTxt"
                android:layout_width="140dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="Message Time:"
                android:textColor="@color/accent_orange"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/chatMessageTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="12:45"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/messageTxt"
                android:layout_width="140dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="Message:"
                android:textColor="@color/accent_orange"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="232e2fd43r232ef dd dvdfv f34f4"
                android:maxLines="4"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/actionCommentTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="Action Comment:"
                android:textColor="@color/accent_orange"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/actionComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="Send a warning to the user."
                android:maxLines="4"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:visibility="visible" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_send_warning"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:background="@drawable/btn_back"
            android:fontFamily="@font/nunito"
            android:gravity="center"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_gravity="center_horizontal"
            android:text="Send Warning"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
